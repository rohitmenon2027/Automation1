pipeline {
    agent any
    
    environment {
        VIRTUAL_ENV = '.venv'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/rohitmenon2027/Automation1.git'
            }
        }

        stage('Setup Python Environment') {
            steps {
                script {
                    // Check if python3 is installed
                    powershell 'python --version || echo "Python3 is not installed on the agent!"'
                    
                    // Create a virtual environment and install dependencies
                    powershell 'python -m venv ${VIRTUAL_ENV}'
                    powershell '${VIRTUAL_ENV}\\Scripts\\pip install --upgrade pip'
                    powershell '${VIRTUAL_ENV}\\Scripts\\pip install -r requirements.txt || echo "Ensure requirements.txt exists and is correct."'
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run pytest and generate a JUnit-compatible report
                    powershell '${VIRTUAL_ENV}\\Scripts\\pytest --maxfail=5 --disable-warnings --junitxml=report.xml || echo "Tests failed."'
                }
            }
        }

        stage('Archive Test Results') {
            steps {
                junit 'report.xml'
            }
        }

        stage('Clean Up') {
            steps {
                script {
                    // Clean up by removing the virtual environment
                    powershell 'Remove-Item -Recurse -Force ${VIRTUAL_ENV}'
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }

        success {
            echo 'Tests ran successfully!'
        }

        failure {
            echo 'Tests failed.'
        }
    }
}


